<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_performance_monitor"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_chart_type"
        android:spinnerMode="dropdown"
        android:layout_gravity="center|fill" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_chart_time_unit"
        android:layout_gravity="center|fill"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/spinner_chart_type"
        android:layout_toEndOf="@+id/spinner_chart_type" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/view_chart"
        android:layout_gravity="center|fill"
        android:layout_below="@+id/spinner_chart_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_chart_item"
        android:layout_gravity="center|fill"
        android:layout_below="@+id/view_chart"
        android:layout_centerHorizontal="true" />

</RelativeLayout>